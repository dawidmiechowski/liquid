<html>
    <head>
        <title>Different time zones</title>
        <script type="text/javascript">
            function printSelectedItem() {
                var e = document.getElementById("zones");
                var selectedItem = e.options[e.selectedIndex].value;
                alert(selectedItem);
            }
        </script>
    </head>
    <body style="text-align: center;">
        <h1>Different time zones</h1>
        <big>Select time zone:</big>
        <select id="zones" onchange="printSelectedItem()">
            <option value="{{ "now"  | to_time: "Europe/Oslo" }}">Local</option>
            <option value="{{ "now"  | to_time: "America/Chicago" }}">Chicago</option>
            <option value="{{ "now"  | to_time: "Sydney" }}">Sydney</option>
            <option value="{{ "now"  | to_time: "Tokyo" }}">Tokyo</option>
            <option value="{{ "now"  | to_time: "Singapore" }}">Singapore</option>
            <option value="{{ "now"  | to_time: "Mumbai" }}">Mumbai</option>
            <option value="{{ "now"  | to_time: "Moscow" }}">Moscow</option>
            <option value="{{ "now"  | to_time: "Auckland" }}">Auckland</option>

        </select>
    </body>
</html>